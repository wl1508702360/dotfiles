" gdc
"
" Load .vimrc.local if exists {{{
"   if (filereadable($HOME . "/.vimrc.local"))
"       source $HOME/.vimrc.local
"   endif
" }}}

" color {{{
set background=dark
colorscheme PaperColor
highlight LineNr ctermbg=grey
" }}}

" UI layout {{{
set number " 行号的显示控制
" set colorcolumn=80 " 在80列出显示标记
set cursorline
if (version >= 600)
    set foldcolumn=0
endif
" }}}

" Leader shortcuts {{{
nnoremap <leader>n :NERDTree<CR>
" }}}
